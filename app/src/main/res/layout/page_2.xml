<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page2Activity">

    <Button
        android:id="@+id/gameA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:outlineSpotShadowColor="@color/yellow"
        android:textColor="@color/yellow"
        android:padding="25dp"
        android:textSize="20sp"
        android:text="GAME A" />

    <Button
        android:id="@+id/gameB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="257dp"
        android:outlineSpotShadowColor="@color/yellow"
        android:textColor="@color/yellow"
        android:padding="25dp"
        android:textSize="20sp"
        android:text="GAME B" />

    <Button
        android:id="@+id/showScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="397dp"
        android:padding="25dp"
        android:textSize="16sp"
        android:text="Show Score" />

    <Button
        android:id="@+id/backfromPage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="537dp"
        android:padding="25dp"
        android:textSize="16sp"
        android:text="Back" />

</RelativeLayout>

